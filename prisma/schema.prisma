generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String      @id  
  email            String      @unique
  password         String
  sessions         Session[]
  resetToken       String?     @unique
  resetTokenExpiry DateTime?
  chats            Chat[]
  transcripts      Transcript[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Chat {
  id           String     @id
  userId       String
  message      String
  type         ChatType   // Add this enum field
  createdAt    DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  transcriptId String
}


model Transcript {
  id        String   @id
  userId    String
  videoUrl  String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
  chats     Chat[]
}

enum ChatType {
  QUESTION
  ANSWER
}